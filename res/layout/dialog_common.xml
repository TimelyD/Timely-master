<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#fff"
              android:paddingLeft="@dimen/common.26dp"
              android:paddingRight="@dimen/common.26dp"
              android:paddingTop="@dimen/common.20dp"
              android:paddingBottom="@dimen/common.20dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_marginBottom="@dimen/dialog_common_padding"
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_dialog_title"
            android:textSize="@dimen/tx_2"
            android:text="@string/language"
            android:textColor="@color/black_deep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_close_dialog"
            android:layout_alignParentRight="true"
            android:src="@drawable/close"
            android:layout_width="@dimen/common.16dp"
            android:layout_height="@dimen/common.16dp"/>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/dialog_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/common.10dp"
        android:paddingBottom="@dimen/common.10dp">

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/btn_lang_confirm"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common.40dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_selector"
            android:text="@string/setlang_confirm"
            android:textColor="#FFF"
            android:textSize="@dimen/common.16sp"/>

    </LinearLayout>

</LinearLayout>
