<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/common.10dp"
              android:paddingBottom="@dimen/common.10dp"
              android:paddingLeft="@dimen/common.15dp"
              android:paddingRight="@dimen/common.15dp"
              android:background="@android:color/white"
              android:orientation="horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="@dimen/common.70dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="今天"
            android:textColor="@color/tx_black_1"
            android:textSize="@dimen/tx_3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/common.10dp"
        android:padding="@dimen/common.5dp"
        android:background="@color/bg_t"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.tg.tgt.moment.widgets.ExpandTextView
            android:id="@+id/contentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <!-- 不同的地方 -->
        <ViewStub
            android:id="@+id/viewStub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common.5dp"
            />

    </LinearLayout>




    <TextView
        android:id="@+id/nameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="15sp"/>


    <TextView
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="删除"
        android:textColor="#8290AF"
        android:textSize="12sp"
        android:visibility="gone"/>

</LinearLayout>