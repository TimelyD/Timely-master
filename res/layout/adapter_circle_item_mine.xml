<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/bg_t">


    <RelativeLayout
        android:layout_width="@dimen/common.50dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/bg_t">
        <View
            android:id="@+id/split"
            android:layout_width="@dimen/common.1dp"
            android:layout_height="@dimen/common.30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#80C2C2C2"
            android:visibility="gone"/>
        <View
            android:id="@+id/circle"
            android:layout_width="@dimen/common.14dp"
            android:layout_height="@dimen/common.14dp"
            android:layout_below="@+id/split"
            android:layout_marginTop="@dimen/common.30dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle_gray_mine" />

        <View
            android:id="@+id/line_circle"
            android:layout_width="@dimen/common.1dp"
            android:layout_height="match_parent"
            android:layout_below="@+id/circle"
            android:layout_centerHorizontal="true"
            android:background="#80C2C2C2"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_t">

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/common.25dp"
            android:singleLine="true"
            android:text="今天"
            android:textColor="#333333"
            android:textSize="@dimen/common.18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/timeTv"
            android:layout_marginTop="@dimen/common.18dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/common.18dp"
            android:paddingRight="@dimen/common.18dp"
            android:paddingBottom="@dimen/common.18dp"
            android:paddingTop="@dimen/common.15dp">


            <com.tg.tgt.moment.widgets.ExpandTextView
                android:id="@+id/contentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!-- 不同的地方 -->
            <ViewStub
                android:id="@+id/viewStub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common.10dp" />

        </LinearLayout>


