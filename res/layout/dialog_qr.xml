<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:padding="@dimen/common.20dp"
    android:background="#00000000"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.hyphenate.easeui.widget.CircleImageView
            android:id="@+id/iv_avatar"
            android:src="@drawable/default_avatar"
            android:layout_width="@dimen/common.80dp"
            android:layout_height="@dimen/common.80dp"/>

        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name"
                android:text="name"
                android:textSize="@dimen/tx_0"
                android:layout_marginTop="@dimen/common.10dp"
                android:textStyle="bold"
                android:textColor="@color/tx_black_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_email"
                android:text="name"
                android:textSize="@dimen/tx_4"
                android:layout_marginTop="@dimen/common.5dp"
                android:textColor="@color/tx_black_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_qr_code"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ll"
        android:layout_width="@dimen/common.260dp"
        android:layout_height="@dimen/common.260dp"/>
    <TextView
        android:layout_below="@id/iv_qr_code"
        android:text="@string/scan_the_qr_code_to_add_me"
        android:textSize="@dimen/tx_3"
        android:layout_centerHorizontal="true"
        android:textColor="@color/tx_black_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>