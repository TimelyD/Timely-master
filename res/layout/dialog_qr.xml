<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
                android:padding="@dimen/common.20dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.hyphenate.easeui.widget.CircleImageView
        android:id="@+id/iv_avatar"
        android:src="@drawable/default_avatar"
        android:layout_width="@dimen/common.60dp"
        android:layout_height="@dimen/common.60dp"/>

    <LinearLayout
        android:layout_marginLeft="@dimen/common.15dp"
        android:layout_toRightOf="@id/iv_avatar"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common.60dp">
        <TextView
            android:id="@+id/tv_name"
            android:text="name"
            android:textSize="@dimen/tx_2"
            android:textColor="@color/tx_black_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_email"
            android:text="name"
            android:textSize="@dimen/tx_4"
            android:textColor="@color/tx_black_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.tg.tgt.widget.SquareFrameLayout
        android:id="@+id/layout_qr"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_avatar"
        android:layout_width="@dimen/common.260dp"
        android:layout_height="@dimen/common.260dp">
        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="@dimen/common.260dp"
            android:layout_height="@dimen/common.260dp"/>
    </com.tg.tgt.widget.SquareFrameLayout>
    <TextView
        android:layout_below="@id/layout_qr"
        android:text="@string/scan_the_qr_code_to_add_me"
        android:textSize="@dimen/tx_3"
        android:layout_centerHorizontal="true"
        android:textColor="@color/tx_black_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>