<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_t"
        android:orientation="vertical">
        <TextView
            android:id="@+id/bt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingTop="@dimen/common.15dp"
            android:text="@string/tishi"
            android:textColor="@color/tx_black_1"
            android:textSize="@dimen/tx_1"/>
        <TextView
            android:id="@+id/ti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingTop="@dimen/common.5dp"
            android:paddingBottom="@dimen/common.15dp"
            android:textColor="@color/tx_black_3"
            android:textSize="@dimen/tx_2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common.42dp"
            android:layout_marginTop="@dimen/common.10dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/write_selector"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@color/tx_black_2"
                android:textSize="@dimen/tx_2"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/divider_t"></View>
            <TextView
                android:id="@+id/cancle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/write_selector"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/chenjin"
                android:textSize="@dimen/tx_2"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>