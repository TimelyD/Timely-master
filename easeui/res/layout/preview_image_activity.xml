<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#202020"
             android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <com.hyphenate.easeui.widget.HackyViewPager
        android:id="@+id/vp_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.hyphenate.easeui.widget.HackyViewPager>

    <RelativeLayout
        android:id="@+id/layout_ctrl"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/title_bar"
            android:background="#363636"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar">

            <RelativeLayout
                android:onClick="back"
                android:id="@+id/left_layout"
                android:layout_width="50dip"
                android:layout_height="match_parent"
                android:background="@drawable/ease_common_tab_bg"
                >

                <ImageView
                    android:src="@drawable/back_white"
                    android:id="@+id/left_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:scaleType="centerInside" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="@dimen/tx_1" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:textColor="#fff"
                android:background="@drawable/btn_selector"
                android:id="@+id/confirm_btn"
                android:text="@string/confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layout_bottom"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:background="#363636"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_top_bar">

            <RelativeLayout
                android:id="@+id/rl_check"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:padding="7dp" >

                <TextView
                    android:id="@+id/ctv_check"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/photo_select_oval_selector"
                    android:enabled="false"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:clickable="false"
                    android:visibility="visible" />

            </RelativeLayout>



        </RelativeLayout>



    </RelativeLayout>


</FrameLayout>