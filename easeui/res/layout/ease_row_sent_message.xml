<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingTop="13dp" >

    <TextView
        android:id="@+id/timestamp"
        style="@style/chat_text_date_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:layout_marginTop="@dimen/margin_chat_activity" >
        <CheckBox
            android:id="@+id/select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:focusable="false"
            android:button="@drawable/round_selector"
            android:layout_centerVertical="true"/>
        <com.hyphenate.easeui.widget.ZQImageViewRoundOval
            android:id="@+id/iv_userhead"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/margin_chat_activity"
            android:src="@drawable/default_avatar"
             />

        <RelativeLayout
            android:clipChildren="false"
            android:clipToPadding="false"
            android:id="@+id/bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_marginRight="@dimen/margin_chat_activity"
            android:layout_toLeftOf="@id/iv_userhead"
            android:background="@drawable/ease_chatto_bg"
            >
            <!--android:autoLink="web"-->
            <TextView
                android:id="@+id/tv_chatcontent"
                android:autoLink="web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColorLink="#fff"
                android:layout_centerInParent="true"
                android:gravity="center|left"
                android:paddingRight="6dp"
                android:paddingLeft="1dp"
                android:minHeight="38dp"
                android:lineSpacingExtra="2dp"
              	android:textColor="#fff"
                android:maxWidth="225.0dip"
                android:textSize="15sp" />


        </RelativeLayout>

        <!--<ImageView
            android:layout_marginTop="-9dp"
            android:layout_marginRight="-9dp"
            android:layout_toLeftOf="@id/bubble"
            android:id="@+id/iv_fire"
            android:src="@drawable/fire_checked"
            android:layout_width="18dp"
            android:layout_height="18dp"/>-->
        
       <!--  <TextView
            android:id="@+id/tv_userid"
            android:visibility="gone"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/iv_userhead"
            android:text="xxx" /> -->

        <TextView
            android:id="@+id/tv_ack"
            android:layout_marginRight="5dp"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:text="@string/text_ack_msg"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_delivered"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/bubble"
            android:text="@string/text_delivered_msg"
            android:textSize="12sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/bubble"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/msg_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common.5dp"
                android:clickable="true"
                android:src="@drawable/ease_msg_state_failed_resend"
                android:visibility="gone" />
            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="@dimen/common.5dp"
                android:indeterminateDrawable="@drawable/progress"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/iv_fire"
                android:src="@drawable/fire3"
                android:layout_marginRight="@dimen/common.5dp"
                android:layout_width="18dp"
                android:layout_height="18dp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_avatar"/>
    </RelativeLayout>

</LinearLayout>