<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_t"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common.50dp"
            android:background="@color/white"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/common.20dp"
                    android:layout_height="@dimen/common.15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/voice3"/>
                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/common.10dp"
                    android:layout_centerVertical="true"
                    android:text="@string/attach_video_call"
                    android:textColor="@color/tx_black_1"
                    android:textSize="@dimen/tx_2"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divider_t">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/common.50dp"
            android:background="@color/white"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="@dimen/common.20dp"
                    android:layout_height="@dimen/common.15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/voice4" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginLeft="@dimen/common.10dp"
                    android:layout_centerVertical="true"
                    android:text="@string/attach_video_call"
                    android:textColor="@color/tx_black_1"
                    android:textSize="@dimen/tx_2"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/cancle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common.50dp"
            android:background="@color/white"
            android:gravity="center"
            android:layout_marginTop="@dimen/common.10dp"
            android:padding="@dimen/common.10dp"
            android:text="@string/cancel"
            android:textColor="@color/chenjin"
            android:textSize="@dimen/tx_2"/>
    </LinearLayout>
</LinearLayout>