<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_face_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/chat_menu_height"
    android:orientation="vertical"
    >

    <com.hyphenate.easeui.widget.emojicon.EaseEmojiconPagerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/pager_view"
        />
    
    <com.hyphenate.easeui.widget.emojicon.EaseEmojiconIndicatorView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/indicator_view"
        android:layout_marginBottom="2dp"
        />
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/bg_t"
        />
    
    <com.hyphenate.easeui.widget.emojicon.EaseEmojiconScrollTabBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/ctrl_bar_height"
        android:id="@+id/tab_bar"
         />
    
</LinearLayout>