<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/common.280dp"
              android:padding="@dimen/common.20dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="4dp"
            android:text="@string/prompt"
            android:textColor="#333"
            android:visibility="visible"
            android:textSize="@dimen/tx_2" />
       
 
        <TextView
            android:id="@+id/alert_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:minHeight="@dimen/common.60dp"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#333"
            android:textSize="@dimen/tx_3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common.35dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/corner_layout_color_primary"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#666666"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="@dimen/tx_3"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common.35dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_selector"
            android:gravity="center"
            android:text="@string/ok"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#fff"
            android:textSize="@dimen/tx_3" />
    </LinearLayout>

</LinearLayout>
