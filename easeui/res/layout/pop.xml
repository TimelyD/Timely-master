<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    android:gravity="bottom"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_t"
        android:orientation="vertical">
        <TextView
            android:id="@+id/bt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/common.10dp"
            android:text="@string/dismiss_group"
            android:textColor="@color/tx_black_1"
            android:textSize="@dimen/tx_2"/>
        <TextView
            android:id="@+id/cancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:layout_marginTop="@dimen/common.10dp"
            android:padding="@dimen/common.10dp"
            android:text="@string/cancel"
            android:textColor="@color/chenjin"
            android:textSize="@dimen/tx_2"/>
    </LinearLayout>
</LinearLayout>